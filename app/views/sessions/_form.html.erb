<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div class="form-group row">
    <%= f.label :username, class: 'col-form-label col-md-4' %>

    <div class="col-md-8">
      <%= f.text_field :username, class: 'form-control'  %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: 'col-form-label col-md-4' %>

    <div class="col-md-8">
      <%= f.password_field :password, class: 'form-control'  %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-8 ml-auto">
      <small class="text-small text-muted">
        Please, <%= link_to 'Create new account', new_user_path %> if you don't have the account.
      </small>

      <%= f.submit 'Login', class: 'btn btn-primary btn-block my-2' %>
    </div>
  </div>
<% end %>