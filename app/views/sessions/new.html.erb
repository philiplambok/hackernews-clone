<% title_page 'Account Login' %>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div class="form-group row">
    <%= f.label :username, class: 'col-form-label col-md-4' %>

    <div class="col-md-8">
      <%= f.text_field :username, class: 'col-form-label'  %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: 'col-form-label col-md-4' %>

    <div class="col-md-8">
      <%= f.password_field :password, class: 'col-form-label'  %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-8 ml-auto">
      <%= f.submit 'Login', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>